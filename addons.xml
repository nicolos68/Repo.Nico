<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
    
    <!-- VStream -->
    <addon id="plugin.video.vstream"
           name="VStream"
           version="1.0.0"
           provider-name="Team VStream">
        <extension point="xbmc.python.script"/>
        <extension point="xbmc.addon.metadata">
            <summary>VStream - Streaming addon</summary>
            <description>Addon permettant le streaming de films et séries.</description>
            <platform>all</platform>
            <license>GPL-3.0</license>
            <source>https://kodi-vstream.github.io/repo/repository.vstream-0.0.6.zip</source>
        </extension>
    </addon>

    <!-- Skin Bingie -->
    <addon id="skin.bingie"
           name="Bingie"
           version="1.0.0"
           provider-name="Bingie Team">
        <extension point="xbmc.gui.skin"/>
        <extension point="xbmc.addon.metadata">
            <summary>Skin Bingie</summary>
            <description>Un skin inspiré de Netflix pour Kodi.</description>
            <platform>all</platform>
            <license>GPL-3.0</license>
            <source>https://matke-84.github.io/repository.bingie/repository.bingie/repository.bingie-1.0.0.zip</source>
        </extension>
    </addon>

</addons>